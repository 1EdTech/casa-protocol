{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Schema for CASA Attribute ID f6820326-5ea3-4a02-840d-7f91e75eb01b.",
  "title": "lti",
  "type": "object",
  "properties": {
    "launch_url": {
      "type": "string",
      "format": "uri"
    },
    "launch_params": {
      "type": "string"
    },
    "registration_url": {
      "type": "string",
      "format": "uri"
    },
    "content_item_message": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "boolean",
          "enum": [
            true
          ]
        }
      ]
    },
    "outcomes": {
      "type": "string",
      "enum": [
        "required",
        "optional"
      ]
    },
    "version_supported": {
      "description": "Only allow one version to be set because support for different LTI versions can mean different configurations.",
      "type": "string",
      "enum": [
        "1.0",
        "1.1",
        "1.2",
        "2.0"
      ]
    },
    "ims_global_certifications": {
      "type": "object",
      "properties": {
        "link": {
          "type": "string",
          "description": "The link to the vendor's detailed certification page on www.imsglobal.org."
        },
        "certifications": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "required": [
    "launch_url"
  ]
}
